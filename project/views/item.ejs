<%- include('layout', { title: item.name, user }) %>

<h2><%= item.name %></h2>
<p><%= item.description %></p>
<p>Current Price: $<%= item.currentPrice %></p>
<p>End Time: <%= item.endTime %></p>

<h3>Bids</h3>
<ul>
  <% bids.forEach(bid => { %>
    <li>$<%= bid.bidAmount %> by <%= bid.User.username %></li>
  <% }) %>
</ul>

<% if (user) { %>
  <form action="/bids/items/<%= item.id %>" method="POST">
    <input type="number" name="bidAmount" step="0.01" required>
    <button type="submit">Place Bid</button>
  </form>
<% } %>
